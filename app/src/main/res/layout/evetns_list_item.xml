<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_account_circle"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_user_image"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary_text"
                android:text="Event - "
                android:textStyle="bold"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/primary_text"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time : "
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_user_image"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_toRightOf="@id/tv"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30 09/03/2019"
                android:layout_below="@+id/tv_title"
                android:textSize="12dp"/>
            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_below="@+id/tv_see_more"
                android:src="@drawable/placeholder"/>

            <ImageView
                android:id="@+id/iv_love_react"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv_react_count"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_favorite_black"/>
            <TextView
                android:id="@+id/tv_react_count"
                android:layout_below="@+id/iv_poster"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:visibility="gone"
                android:text="0"
                android:textColor="@color/secondary_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_react_count"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:background="@color/grey_300" />

            <ImageView
                android:id="@+id/iv_add_reminder"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv_react_count"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:padding="2dp"
                android:layout_toRightOf="@+id/iv_love_react"
                android:background="@drawable/ic_add_alert"/>
            <ImageView
                android:id="@+id/iv_add_bookmark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv_react_count"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/iv_add_reminder"
                android:background="@drawable/ic_bookmark"/>
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="invisible"
                android:layout_below="@+id/tv_react_count"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_share"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:layout_below="@+id/tv_date"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:autoLink="web"
                android:textSize="16dp"
                android:textColor="@color/primary_text"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_below="@id/tv_desc"
                android:layout_marginLeft="8dp"
                android:visibility="visible"
                android:clickable="true"
                android:layout_marginBottom="4dp"
                android:text="@string/see_more"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>