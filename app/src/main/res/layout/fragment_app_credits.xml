<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppCredits"
    android:background="@color/grey_100">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_app_credits">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="App Developer"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textColor="@color/primary_text"
            android:id="@+id/tv_app_dev"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_app_dev"
            android:layout_height="150dp"
            android:elevation="3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#251f1f1f"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/iv_propic"
                    android:background="@drawable/propic"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/iv_propic"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paresh Agrawal"
                        android:id="@+id/tv_name"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/iv_propic"
                        android:textColor="@color/primary_text"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_batch"
                        android:layout_toRightOf="@+id/iv_propic"
                        android:text="B.Tech 2016-2020"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primary_text"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_propic"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/iv_fb"
                            android:background="@drawable/ic_fb"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/iv_github"
                            android:background="@drawable/ic_github"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:id="@+id/tv_githun_username"
                            android:textColor="#ee1f1f1f"
                            android:layout_marginLeft="2dp"
                            android:text="@string/github_username"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>
